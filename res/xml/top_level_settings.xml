<PreferenceScreen
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:settings="http://schemas.android.com/apk/res-auto"
        android:key="top_level_settings">

    <Preference
        android:title="@string/user_category_title"
        android:icon="@drawable/ic_user_info"
        android:key="category"
        android:selectable="false"
        android:order="-175"/>
        
    <com.android.settingslib.widget.LayoutPreference
            android:layout="@layout/usercard_blank"
            android:fragment="com.android.settings.users.UserSettings"
            android:key="top_level_usercard"
            android:order="-170" />

    <Preference
        android:title="@string/connectivity_category_title"
        android:icon="@drawable/ic_network"
        android:key="category"
        android:selectable="false"
        android:order="-165"/>
        
    <Preference
            android:fragment="com.android.settings.network.NetworkDashboardFragment"
        settings:layout="@layout/arc_card_top"
        android:icon="@drawable/ic_homepage_network"
            android:key="top_level_network"
            android:order="-160"
            android:title="@string/network_dashboard_title"
            settings:controller="com.android.settings.network.TopLevelNetworkEntryPreferenceController"/>

    <Preference
            android:fragment="com.android.settings.connecteddevice.ConnectedDeviceDashboardFragment"
        settings:layout="@layout/arc_card_mid"
        android:icon="@drawable/ic_homepage_connected_device"
            android:key="top_level_connected_devices"
            android:order="-150"
            android:title="@string/connected_devices_dashboard_title"
            settings:controller="com.android.settings.connecteddevice.TopLevelConnectedDevicesPreferenceController"/>

    <Preference
            android:fragment="com.android.settings.accounts.AccountDashboardFragment"
        settings:layout="@layout/arc_card_bot"
        android:icon="@drawable/ic_homepage_accounts"
            android:key="top_level_accounts"
            android:order="-140"
            android:title="@string/account_dashboard_title"
            settings:controller="com.android.settings.accounts.TopLevelAccountEntryPreferenceController"/>

    <Preference
        android:title="@string/device_personalizations_title"
	android:icon="@drawable/ic_device_personalizations"
        android:key="category"
        android:selectable="false"
        android:order="-135"/>
        
        <Preference
        android:key="top_level_extensions"
        settings:layout="@layout/arc_card_top"
        android:title="@string/extensions_title"
        android:icon="@drawable/ic_tresdin"
        android:order="-130"
        android:fragment="org.aospextended.extensions.Extensions"
        settings:controller="org.aospextended.extensions.TopLevelExtensionsEntryPreferenceController" />

    <com.android.settingslib.RestrictedTopLevelPreference
        android:icon="@drawable/ic_homepage_wallpaper"
        settings:layout="@layout/arc_card_bot"
            android:key="top_level_wallpaper"
            android:order="-120"
            android:title="@string/wallpaper_settings_title"
            settings:controller="com.android.settings.display.TopLevelWallpaperPreferenceController"/>

    <Preference
        android:title="@string/system_category_title"
        android:icon="@drawable/ic_system"
        android:key="category"
        android:selectable="false"
        android:order="-115"/>
        
    <Preference
            android:fragment="com.android.settings.fuelgauge.PowerUsageSummary"
        settings:layout="@layout/arc_card_top"
        android:icon="@drawable/ic_homepage_battery"
            android:key="top_level_battery"
            android:order="-110"
            android:title="@string/power_usage_summary_title"
            settings:controller="com.android.settings.fuelgauge.TopLevelBatteryPreferenceController"/>

    <Preference
            android:fragment="com.android.settings.DisplaySettings"
        settings:layout="@layout/arc_card_mid"
        android:icon="@drawable/ic_homepage_display"
            android:key="top_level_display"
            android:order="-100"
            android:title="@string/display_settings"
            settings:controller="com.android.settings.display.TopLevelDisplayPreferenceController"/>

    <Preference
            android:fragment="com.android.settings.notification.SoundSettings"
            settings:layout="@layout/arc_card_mid"
        android:icon="@drawable/ic_homepage_sound"
            android:key="top_level_sound"
            android:order="-90"
            android:title="@string/sound_settings" />

    <Preference
            android:fragment="com.android.settings.applications.AppDashboardFragment"
            settings:layout="@layout/arc_card_bot"
            android:icon="@drawable/ic_homepage_apps"
            android:key="top_level_apps"
            android:order="-80"
            android:title="@string/apps_dashboard_title" />

    <Preference
        android:title="@string/device_accessibility_title"
        android:icon="@drawable/ic_accessibility_settings"
        android:key="category"
        android:selectable="false"
        android:order="-75"/>
        
    <Preference
            android:fragment="com.android.settings.deviceinfo.StorageDashboardFragment"
        settings:layout="@layout/arc_card_top"
        android:icon="@drawable/ic_homepage_storage"
            android:key="top_level_storage"
            android:order="-70"
            android:title="@string/storage_settings"
            settings:controller="com.android.settings.deviceinfo.TopLevelStoragePreferenceController"/>

    <Preference
            android:fragment="com.android.settings.notification.ConfigureNotificationSettings"
        settings:layout="@layout/arc_card_mid"
        android:icon="@drawable/ic_homepage_notification"
            android:key="top_level_notification"
            android:order="-60"
            android:title="@string/configure_notification_settings" />

    <Preference
            android:fragment="com.android.settings.location.LocationSettings"
        settings:layout="@layout/arc_card_mid"
        android:icon="@drawable/ic_homepage_location"
            android:key="top_level_location"
            android:order="-50"
            android:title="@string/location_settings_title"
            settings:controller="com.android.settings.location.TopLevelLocationPreferenceController"/>

    <Preference
            android:fragment="com.android.settings.accessibility.AccessibilitySettings"
        settings:layout="@layout/arc_card_bot"
        android:icon="@drawable/ic_homepage_accessibility"
            android:key="top_level_accessibility"
            android:order="-40"
            android:title="@string/accessibility_settings"
            settings:controller="com.android.settings.accessibility.TopLevelAccessibilityPreferenceController"/>

    <Preference
        android:title="@string/privacy_category_title"
        android:icon="@drawable/ic_privacy"
        android:key="category"
        android:selectable="false"
        android:order="-35"/>
        
    <Preference
            android:fragment="com.android.settings.security.SecuritySettings"
        settings:layout="@layout/arc_card_top"
        android:icon="@drawable/ic_homepage_security"
            android:key="top_level_security"
            android:order="-30"
            android:title="@string/security_settings_title"
            settings:controller="com.android.settings.security.TopLevelSecurityEntryPreferenceController"/>

    <Preference
            android:fragment="com.android.settings.privacy.PrivacyDashboardFragment"
        settings:layout="@layout/arc_card_mid"
        android:icon="@drawable/ic_homepage_privacy"
            android:key="top_level_privacy"
            android:order="-20"
            android:title="@string/privacy_dashboard_title" />

    <Preference
            android:key="top_level_emergency"
            android:title="@string/emergency_settings_preference_title"
        android:icon="@drawable/ic_homepage_emergency"
      settings:layout="@layout/arc_card_mid"
            android:order="-10"
            android:fragment="com.android.settings.emergency.EmergencyDashboardFragment"/>

    <Preference
        android:title="@string/device_category_title"
        android:icon="@drawable/ic_deviceinfo"
        android:key="category"
        android:selectable="false"
        android:order="5"/>
        
    <Preference
            android:fragment="com.android.settings.system.SystemDashboardFragment"
       android:icon="@drawable/ic_homepage_system_dashboard"
        settings:layout="@layout/arc_card_top"
            android:key="top_level_system"
            android:order="10"
            android:title="@string/header_category_system" />

    <Preference
        android:icon="@drawable/ic_help"
        android:key="top_level_support"
        android:order="15"
        settings:layout="@layout/arc_card_mid"
        android:title="@string/page_tab_title_support"
        settings:controller="com.android.settings.support.SupportPreferenceController"/>

    <Preference
        android:fragment="com.android.settings.deviceinfo.aboutphone.MyDeviceInfoFragment"
        android:icon="@drawable/ic_homepage_about"
        android:key="top_level_about_device"
        settings:layout="@layout/arc_card_bot"
        android:order="20"
        android:title="@string/about_settings"/>

</PreferenceScreen>

